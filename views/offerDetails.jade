extends layout

block content
    .row
        .col-md-1
        .col-md-10
            .row
                .col-md-12
                    a(href='/') Accueil
                    | >
                    a(href='/offers') Liste des offres
                    | >
                    a(href='/detailOffer?offerID=#{offer._id}') Détails de l'offre
            br
            .row
                .col-md-10
                    p.h4 Détails de l'offre
                    br
                    .row
                        .col-md-5
                            img.img-fluid(src='src/images/pondeuse.jpg')
                        .col-md-5
                            .row
                                .col-md-12
                                    h5 Type de poulet
                                    |  #{offer.chickenType} 
                                    br
                                    h5 Grosseur
                                    |  #{offer.chickenSize}  
                                    br
                                    h5 Quantité en stock
                                    |  #{offer.quantity}  
                                    br
                                    h5 Prix unitaire
                                    |  #{offer.unitPrice} F CFA par unité
                                    br
                                    h5 Possibilité de réduction
                                    |  #{offer.reductionAmount} F CFA par lot de #{offer.reductionCondition} poulet(s)   
                                    br
                                    h5 Date de publication
                                    |  #{offer.publicationDate}  
                                    br
                                    .text-center
                                        button.btn.btn-mine(data-toggle='modal', data-target='#modalAddToCart') Choisir cette offre
                                    // Modal d'ajout au panier
                                    #modalAddToCart.modal.fade(tabindex='-1', role='dialog', aria-labelledby='mymodLabel', aria-hidden='true')
                                        .modal-dialog(role='document')
                                            .modal-content
                                                .modal-header.text-center
                                                    h4.modal-title.w-100.font-bold Ajouter au panier
                                                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                                                        span(aria-hidden='true') ×
                                                .modal-body.mx-3
                                                    .md-form
                                                        input#chickenType.form-control(value='#{offer.chickenType} ', type='text', disabled='true')
                                                        label.active(for='chickenType') Type de poulet
                                                    .md-form
                                                        input#chickenSize.form-control(value='#{offer.chickenSize} ', type='text', disabled='true')
                                                        label.active(for='chickenSize') Grosseur
                                                    .md-form
                                                        input#offerQuantity.form-control(value='#{offer.quantity}', type='text', disabled='true')
                                                        label.active(for='offerQuantity') Quantité en stock
                                                    .md-form
                                                        input#offerPrice.form-control(value='#{offer.unitPrice}', type='text', disabled='true')
                                                        label.active(for='offerPrice') Prix unitaire (en F CFA)
                                                    .md-form
                                                        input#offerReduction.form-control(value='#{offer.reductionAmount} F CFA par lot de #{offer.reductionCondition} poulet(s)', type='text', disabled='true')
                                                        label.active(for='offerReduction') Possibilité de réduction
                                                    .md-form
                                                        input#clientQuantity.form-control(type='text', name='quantite')
                                                        label.active(for='clientQuantity') Quantité
                                                    
                                                    - for (var i=0; i<prestations.length; i++)
                                                    
                                                        .form-group

                                                            input(type='checkbox', value= prestations[i].name, id= prestations[i].name)
                                                            label(for= prestations[i].name) #{prestations[i].name}
                                                        
                                                .modal-footer.d-flex.justify-content-center
                                                    button.btn.btn-mine#addToCartButton Ajouter au panier
                                    // Fin du modal d'ajout au panier
                .col-md-2
        .col-md-1
    script.
        var id = !{JSON.stringify(offer._id)};